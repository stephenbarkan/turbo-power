{
  "name": "decap",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm-run-all -p dev:*",
    "build": "run-s build:*",
    "dev:11ty": "eleventy --serve",
    "dev:css": "npx @tailwindcss/cli -i ./index.css -o ./_site/index.css --watch",
    "build:11ty": "eleventy",
    "build:css": "npx @tailwindcss/cli -i ./index.css -o ./_site/index.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-jinja-template"
    ],
    "overrides": [
      {
        "files": [
          "*.njk"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ]
  }
}
